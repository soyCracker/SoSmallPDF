<Page x:Class="SoSmallPDF.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:SoSmallPDF"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MainPage">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Button Name="splitButton" Content="分割split" HorizontalAlignment="Center" VerticalAlignment="Center" Width="75px" Height="75px" Grid.Column="0" Click="splitButton_Click"/>
        <Button Name="mergeButton" Content="合併merge" HorizontalAlignment="Center" VerticalAlignment="Center" Width="75px" Height="75px" Grid.Column="1" Click="mergeButton_Click"/>
        <Button Name="rotateButton" Content="旋轉rotate" HorizontalAlignment="Center" VerticalAlignment="Center" Width="75px" Height="75px" Grid.Column="2" Click="rotateButton_Click"/>

    </Grid>
</Page>
